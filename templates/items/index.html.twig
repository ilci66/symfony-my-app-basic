{% extends 'base.html.twig' %}

{% block title %}Hello ItemsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 960px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper d-flex flex-column justify-content-center align-items-center">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <h2>View all of the items</h2>
    
    <div class="container">
        <div class="row">
            {% for item in items %}
                {# <img src="images/table-coffee-laptop.jpg">
                <p>{{ item.name }}</p>    #}
                <div class="col mb-3">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="images/table-coffee-laptop.jpg" alt={{ item.name}}>
                        <div class="card-body">
                            <h5 class="card-title">{{ item.name }}</h5>
                            <p class="card-text">Item id: {{ item.id }}</p>
                            <a href={{ path('detailed_item', {slug: item.id}) }} class="btn btn-primary">Detailed look</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
